extends ../../layouts/ui-layout/ui-layout.pug

block variables
	- var title = 'Кнопки - UI-kit и HTML фреймворк - Документация';
	- var pageClass = 'body--dashboard';

block content
	.main-wrapper
		.container.container--left.user-content.pt-35
			h1 Кнопки  
			.section-ui
				h2 Buttons normal
				.section-ui
					+button('Подробнее', '#', 'primary')
				.section-ui
					+button('Редактировать', '#', 'edit')
				.section-ui
					+button('Удалить', '#', 'delete')
				.section-ui
					+button('Сохранить', '#', 'save')
				.section-ui
					+button('Войти', '#', 'enter')
				.section-ui
					+button('Профиль', '#', 'profile')
			pre.
				+button('Подробнее', '#', 'primary')
				+button('Редактировать', '#', 'edit')
				+button('Удалить', '#', 'delete')
				+button('Сохранить', '#', 'save')
				+button('Войти', '#', 'enter')
				+button('Профиль', '#', 'profile')
			h2 Buttons with icon
			.section-ui
				+buttonWithIcon('Вперед', '#', 'fa-arrow-right', 'next', 'right')
			.section-ui
				+buttonWithIcon('Назад', '#', 'fa-arrow-left', 'previous', 'left')
			.section-ui
				+buttonWithIcon('Редактировать', '#', 'fa-edit', 'edit', 'right')
			.section-ui
				+buttonWithIcon('Удалить', '#', 'fa-trash-alt', 'delete', 'right')
			.section-ui
				+buttonWithIcon('Сохранить', '#', 'fa-save', 'save', 'right')
			.section-ui
				+buttonWithIcon('Войти', '#', 'fa-sign-in-alt', 'enter', 'left')
			pre.
				+buttonWithIcon('Вперед', '#', 'fa-arrow-right', 'next', 'right')
				+buttonWithIcon('Назад', '#', 'fa-arrow-left', 'previous', 'left')
				+buttonWithIcon('Редактировать', '#', 'fa-edit', 'edit', 'right')
				+buttonWithIcon('Удалить', '#', 'fa-trash-alt', 'delete', 'right')
				+buttonWithIcon('Сохранить', '#', 'fa-save', 'save', 'right')
				+buttonWithIcon('Войти', '#', 'fa-sign-in-alt', 'enter', 'left')
			h2 Submit button
			.section-ui
				+buttonSubmit('Подробнее', 'infoButton')
			.section-ui
				+buttonSubmit('Редактировать', 'edit-button', 'edit')
			.section-ui
				+buttonSubmit('Удалить', 'delete-button', 'delete')
			.section-ui
				+buttonSubmit('Сохранить', 'save-button', 'save')
			.section-ui
				+buttonSubmit('Войти', 'enter-button', 'enter')
			.section-ui
				+buttonSubmit('Профиль', 'profile-button', 'profile')
			pre.
				+buttonSubmit('Подробнее', 'infoButton')
				+buttonSubmit('Редактировать', 'edit-button', 'edit')
				+buttonSubmit('Удалить', 'delete-button', 'delete')
				+buttonSubmit('Сохранить', 'save-button', 'save')
				+buttonSubmit('Войти', 'enter-button', 'enter')
				+buttonSubmit('Профиль', 'profile-button', 'profile')
			h2 Button small
			.section-ui
				+button('Подробнее', '#', 'smallPrimary', 'smallPrimary')
			.section-ui
				+button('Удалить', '#', 'smallDelete', 'smallDelete')
			.section-ui
				+button('Редактировать', '#', 'smallEdit', 'smallEdit')
			.section-ui
				+button('Сохранить', '#', 'smallSave', 'smallSave')
			pre.
				+button('Подробнее', '#', 'smallPrimary', 'smallPrimary')
				+button('Удалить', '#', 'smallDelete', 'smallDelete')
				+button('Редактировать', '#', 'smallEdit', 'smallEdit')
				+button('Сохранить', '#', 'smallSave', 'smallSave')
			
			.title mixins/_buttons.pug
			pre.
				mixin button(text, link, type, size)
					if type == "edit"
						a.button(href=link, class="button-edit")&attributes(attributes) #{'#{text}'}
					else if type == "smallEdit" && size == "smallEdit"
						a.button(href=link, class="button-edit button--small-edit")&attributes(attributes) #{'#{text}'}
					else if type == "delete"
						a.button(href=link, class="button-delete")&attributes(attributes) #{'#{text}'}
					else if type == "smallDelete" && size == "smallDelete"
						a.button(href=link, class="button-delete button--small-delete")&attributes(attributes) #{'#{text}'}
					else if type == "save"
						a.button(href=link, class="button-save")&attributes(attributes) #{'#{text}'}
					else if type == "smallSave" && size == "smallSave"
						a.button(href=link, class="button-save button--small-save")&attributes(attributes) #{'#{text}'}
					else if type == "enter"
						a.button(href=link, class="button-enter")&attributes(attributes) #{'#{text}'}
					else if type == "smallEnter" && size == "smallEnter"
						a.button(href=link, class="button-save button--small-enter")&attributes(attributes) #{'#{text}'}
					else if type == "profile"
						a.button(href=link, class="button-profile")&attributes(attributes) #{'#{text}'}
					else if type == "primary"
						a.button(href=link)&attributes(attributes) #{'#{text}'}
					else if type == "smallPrimary" && size == "smallPrimary"
						a.button.button--small-primary(href=link)&attributes(attributes) #{'#{text}'}
			pre.
				mixin buttonSubmit(text, name, type)
					if type == "edit"
						input.button(type="submit", name=name, class="button-edit", value=text)&attributes(attributes)
					else if type == "delete"
						input.button(type="submit", name=name, class="button-delete", value=text)&attributes(attributes)
					else if type == "save"
						input.button(type="submit", name=name, class="button-save", value=text)&attributes(attributes)
					else if type == "enter"
						input.button(type="submit", name=name, class="button-enter", value=text)&attributes(attributes)
					else if type == "profile"
						input.button(type="submit", name=name, class="button-profile", value=text)&attributes(attributes)
					else
						input.button(type="submit", name=name, value=text)&attributes(attributes)
			pre.
				mixin buttonWithIcon(text, link, icon, type, iconPos)
					if type == "next" && icon != "" && iconPos == "right"
						a.button(href=link, class="button-next")&attributes(attributes) #{'#{text}'} #{'#[span.button__icon #[i(class="mr-0 fas " + icon)]]'}
					else if type == "previous" && icon != "" && iconPos == "left"
						a.button(href=link, class="button-previous") #{'#{text}'} #{'#[span.button__icon.button__icon--mright.float-left #[i(class="mr-0 fas " + icon)]]'}
					else if  type == "edit" && icon != "" && iconPos == "right"
						a.button(href=link, class="button-edit")&attributes(attributes) #{'#{text}'} #{'#[span.button__icon #[i(class="mr-0 fas " + icon)]]'}
					else if  type == "edit" && icon != "" && iconPos == "left"
						a.button(href=link, class="button-edit") #{'#{text}'} #{'#[span.button__icon.button__icon--mright.float-left #[i(class="mr-0 fas " + icon)]]'}
					else if  type == "delete" && icon != "" && iconPos == "right"
						a.button(href=link, class="button-delete")&attributes(attributes) #{'#{text}'} #{'#[span.button__icon #[i(class="mr-0 fas " + icon)]]'}
					else if  type == "delete" && icon != "" && iconPos == "left"
						a.button(href=link, class="button-delete")&attributes(attributes) #{'#{text}'} #{'#[span.button__icon.button__icon--mright.float-left #[i(class="mr-0 fas " + icon)]]'}
					else if  type == "save" && icon != "" && iconPos == "right"
						a.button(href=link, class="button-save")&attributes(attributes) #{'#{text}'} #{'#[span.button__icon #[i(class="mr-0 fas " + icon)]]'}
					else if type == "save" && icon != "" && iconPos == "left"
						a.button(href=link, class="button-save")&attributes(attributes) #{'#{text}'} #{'#[span.button__icon.button__icon--mright.float-left #[i(class="mr-0 fas " + icon)]]'}
					else if type == "enter" && icon != "" && iconPos == "right"
						a.button(href=link, class="button-enter")&attributes(attributes) #{'#{text}'} #{'#[span.button__icon #[i(class="mr-0 fas " + icon)]]'}
					else if type == "enter" && icon != "" && iconPos == "left"
						a.button(href=link, class="button-enter")&attributes(attributes) #{'#{text}'} #{'#[span.button__icon.button__icon--mright.float-left #[i(class="mr-0 fas " + icon)]]'}
