extends ../../layouts/ui-layout/ui-layout.pug

block variables
	- var title = 'Поля ввода - UI-kit и HTML фреймворк - Документация';
	- var pageClass = 'body--dashboard';

block content
	.main-wrapper
		.container.container--left.user-content.pt-35
			h1 Поля ввода c label
			.section-ui
				+input('input-text','text','Введите имя','Name:','fieldText')
			pre.
				+input('input-text','text','Введите имя','Name:','fieldText')
			h2.title-2 Поле ввода без label
			.section-ui
				+input('input-mail','email','E-mail')
			pre.
				+input('input-mail','email','E-mail')
			
			.title mixins/_input.pug
			pre.
				mixin input(name,type,placeholder,labelText,id)
					if labelText && id
						label.label(for=id) #{'#{labelText}'}
						input.input(name=name id=id type=type placeholder=placeholder)&attributes(attributes)
					else 
						input.input(name=name type=type placeholder=placeholder)&attributes(attributes)
			.section-ui
				+textarea('name','Парк находится в горах Сьерра-Невада на востоке штата Калифорния и занимает огромную даже для Америки площадь, около 3000 кв. км.','Сообщение - Textarea', 'message')
			pre.
				+textarea('name','Парк находится в горах Сьерра-Невада на востоке штата Калифорния и занимает огромную даже для Америки площадь, около 3000 кв. км.','Сообщение - Textarea', 'message')
			.section-ui
				+textarea('name','Введите текст')
			pre.
				+textarea('name','Введите текст')
			
			
			.title mixins/_textarea.pug
			pre.
				mixin textarea(name,placeholder,labelText,id)
					if labelText && id
						label.label(for=id) #{'#{labelText}'}
						textarea.textarea(name=name id=id placeholder=placeholder)&attributes(attributes) #{'#{areaText}'}
					else 
						textarea.textarea(name=name placeholder=placeholder)&attributes(attributes) #{'#{areaText}'}

			p Параметры: name - содержание атрибута name, type - содержание атрибута type, placeholder - содержание атрибута placeholder, labelText - текст в теге label, areaText - текст в теге textarea.
